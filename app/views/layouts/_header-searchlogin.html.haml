-# ユーザーがログインしている時のヘッダー
%header.pcheader
  .header-container
    .main-header
      .furima-logo
        = link_to image_tag("logo.png", class:"furima-logo"), '/'
      .form
        .search-box
          %input{type: "search", class: "search-box__text", placeholder: "キーワードから探す"}
          = button_tag type:"submit", class: 'search-box__btn' do
            =image_tag 'icon-search 1.png'

    .sub-header
      %ul.leftlist
        %li.leftlist__conts
          = link_to '#', class: "" do
            カテゴリー
        %li.leftlist__conts
          = link_to '#', class: "" do
            ブランド
        
      %ul.rightlist
        %li.rightlist__conts
          = link_to '/users/show', class: "" do
            マイページ