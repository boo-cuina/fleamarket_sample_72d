.item-new
  = render 'layouts/header-logo'
  .item-new__content
    = form_for @item do |f|
      .item-new__content-picture
        .title 
          %p 出品画像
          .necessary-mark 必須
        %p.note 最大５枚までアップロードできます
        .file-upload-box
          #image-box
            #previews
              - if @item.persisted?
                - @item.photos.each_with_index do |image,i|
                  = image_tag image.image.url, data: { index: i }, width: "80px",height:"80px",class:"preview-image"
            #file-fields
              = f.fields_for :photos do |i|
                .js-file_group{data:{index: "#{i.index}"}}
                  %label{class: "js-file"}
                    = icon("fa", "camera")
                    = i.file_field :image, class: "js-file-bottun"
                  .js-remove
                    = icon("fas", "trash-alt")
                - if @item.persisted?
                  = i.check_box :_destroy, data:{index:"#{i.index}"}, class: 'hidden-destroy'
              - if @item.persisted?
                .js-file_group{data:{index: "#{@item.photos.count}"}}
                  %label{class: "js-file"}
                    = icon("fa", "camera")
                    = file_field_tag :image,class: "js-file-bottun",name: "item[photos_attributes][#{@item.photos.count}][image]"
                  .js-remove
                    = icon("fas", "trash-alt")
      .item-new__content-detail
        .title
          %p 商品名
          .necessary-mark 必須
        .detail__text-form1
          = f.text_field :name, class: "item-new-form", maxlength: 20
        .title
          %p 商品の説明
          .necessary-mark 必須
        .detail__text-form2
          = f.text_area :description, class: "item-new-form2", maxlength: 1000
      .item-new__content-category
        %p 商品の詳細
        .title
          %p カテゴリー
          .necessary-mark 必須
        .category__text-form
          = f.collection_select :category_id, Category.where(ancestry: nil), :id, :name, {include_blank: '選択して下さい', selected: @item.category.root_id}, {class: "item-category-form", id: 'parent_category'}
          = f.collection_select :category_id, @category_children_array,:id, :name, {include_blank: '選択して下さい',selected: @item.category.parent.id}, {class: 'item-category-form2__select', id: 'children_wrapper'}
          = f.collection_select :category_id, @category_grandchildren_array,:id, :name, {include_blank: '選択して下さい',selected: @item.category.id}, {class: 'item-category-form3__select', id: 'grandchildren_wrapper'}
          
        .title
          %p サイズ 
          .necessary-mark 必須
        .category__text-form2
          = f.select :size, [["SS", "SS"], ["S", "S"], ["M", "M"], ["L", "L"], ["XL", "XL"]],{include_blank: "選択して下さい"}, {class: "item-new-form"}
        .title
          %p 商品の状態
          .necessary-mark 必須
        .category__text-form3
          = f.select :status, [["新品・未使用", "新品・未使用"], ["未使用に近い", "未使用に近い"], ["目立った傷や汚れなし", "目立った傷や汚れなし"], ["やや傷や汚れあり", "やや傷や汚れあり"], ["傷や汚れあり", "傷や汚れあり"], ["全体的に状態が悪い", "全体的に状態が悪い"]], {include_blank: ""}, {class: "item-new-form"}
      .item-new__content-delivery
        %p 配送について
        .title
          %p 配送料の負担
          .necessary-mark 必須
        .delivery__text-form1
          = f.select :shipping_fee, [["送料込み(出品者負担)", "送料込み(出品者負担)"], ["着払い(購入者負担)", "着払い(購入者負担)"]], {include_blank: ""}, {class: "item-new-form"}
        .title
          %p 発送元の地域
          .necessary-mark 必須
        .delivery__text-form2
          = f.collection_select :shippingfrom_id, Shippingfrom.all, :id, :name, {prompt: "--"}, {class: "item-new-form"}
        .title
          %p 発送までの日数
          .necessary-mark 必須
        .delivery__text-form2
          = f.select :shipping_days, [["1~2日で発送", "1~2日で発送"], ["2~3日で発送", "2~3日で発送"], ["4~7日で発送", "4~7日で発送"]], {include_blank: ""}, {class: "item-new-form"}
      .item-new__content-confirm
        %p 価格（￥300〜9,999,999)
        .item-new__content-confirm__box1
          .title
            %p 販売価格
            .necessary-mark 必須
          .confirm__text-form
            %p ￥
            .form
              = f.text_field :price, class: "item-new-form3",min: 300, max: 9999999
        .btn
          = f.submit "編集する", class: "item-new__confirm-btn"
        = link_to 'もどる', "/items/#{@item.id}", class: "back-btn_1"
        %p.caution 禁止されている行為および出品物を必ずご確認ください。偽ブランド品や盗品物などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして加盟店規約に同意したことになります。

  = render 'layouts/footer-logo'