-# ヘッダー
= render "layouts/header-search"

-# メイン
.card-show
  .card-show__container
    .card-show__container__title
      %p 支払い方法
    .card-show__container__inner
      .card-show__container__inner__list
        %p クレジットカード一覧
      .card-show__container__inner__btn
        .card-show__container__inner__btn__box
          .card-show__container__inner__btn__box__info
            .card-show__container__inner__btn__box__info__data
              =image_tag "#{@card_src}", class: 'card-show__container__inner__btn__box__info__data__brand', alt: @card_brand
            .card-show__container__inner__btn__box__info__data
              %p **** **** **** #{@last4}
            .card-show__container__inner__btn__box__info__data
              %p #{@exp_month} / #{@exp_year}
          .card-show__container__inner__btn__box__delete
            = link_to delete_card_path, class: "" do
              %p 削除する
        
-# バナー
= render "layouts/footer-banner"

-# フッター
= render "layouts/footer-links"

-# 出品アイコン
= render "layouts/sell-btn"